# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = tab
insert_final_newline = true
max_line_length = 80
tab_width = 2
trim_trailing_whitespace = true

[*.{py,py.example,yaml,yml,yml.example}]
indent_style = space

[*.{py,py.example}]
indent_size = 4
tab_width = 4
